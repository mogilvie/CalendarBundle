<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <mapped-superclass name="SpecShaper\CalendarBundle\Model\Calendar">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="country" type="string" length="3" />
        <field name="timeZone" type="string" length="6" />
        <field name="dateFormat" type="integer" />
        <field name="timeFormat" type="integer" />
        <field name="defaultDuration" type="integer" />
        <field name="otherCalendarFormat" type="integer" />
        <field name="createdOn" type="datetime" />
    </mapped-superclass>

</doctrine-mapping>
