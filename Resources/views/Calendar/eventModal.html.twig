{% trans_default_domain "messages" %}

{% form_theme form with ['bootstrap_3_layout.html.twig', 'SpecShaperCalendarBundle:Form:field_invitees.html.twig'] %}

<div class="modal" id="eventModal" name="eventModal" tabindex="-1" role="dialog" aria-labelledby="searchModal" aria-hidden="true" >
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">{% trans %}specshaper_calendarbundle.tooltip.close{% endtrans %}</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}specshaper_calendarbundle.heading.event{% endtrans %}</h4>
      </div>

      <div class="modal-body">
        <div class="container-fluid">
          {{ form_start (form) }}
          <div class="col-md-2">
            <div class="form-group-sm well well-sm">
              {{ form_row(form.isAllDay)}}
              {{ form_row(form.startDate) }}
              {{ form_row(form.startTime) }}
              {{ form_row(form.endDate) }}
              {{ form_row(form.endTime) }}
            </div>
            <div class="form-group-sm well well-sm">
              {{ form_row(form.isReoccuring) }}
              {{ form_row(form.period) }}
              {{ form_row(form.repeatUntil) }}
            </div>
          </div>
          <div class="col-md-6">   
            {{ form_errors (form) }}            
            {{ form_row(form.title)}}
            {{ form_row(form.text)}}
            {{ form_widget(form.bgColor)}}
          </div>

          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Panel title</h3>
              </div>
              <div class="panel-body">
                <div class="input-group input-group-sm">
                  <input id="emailAddressesInput" class="form-control" type="email" name="email" autocomplete="on" list="emailAddresses">
                  <span class="input-group-btn">
                    <button id="addInviteeButton" class="btn btn-default" type="button"><i class="glyphicon glyphicon-plus"></i></button>
                  </span>
                </div>
                {{ form_widget(form.calendarInvitees)}}
              </div>
            </div>
          </div>
          <input id="eventSubmitButton" type="submit" class="hidden" />
          
          {{ form_end(form)}}

        </div>
      </div>
      <div class="modal-footer">
        <div class="input-group pull-right">
          <button id="deleteSeriesButton" class="btn btn-primary">{{ "specshaper_calendarbundle.button.deleteSeries" | trans }}</button>      
          <button id="deleteButton" class="btn btn-primary">{{ "specshaper_calendarbundle.button.delete" | trans }}</button>
          <button id="submitButton" class="btn btn-primary">{{ "specshaper_calendarbundle.button.submit" | trans }}</button>
        </div>
      </div>
    </div>
  </div>
</div>