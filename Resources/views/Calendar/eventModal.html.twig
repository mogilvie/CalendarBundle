{% trans_default_domain "messages" %}

{% form_theme form with ['bootstrap_3_layout.html.twig'] %}


<div class="modal" id="eventModal" name="eventModal" tabindex="-1" role="dialog" aria-labelledby="searchModal" aria-hidden="true" >
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">{% trans %}specshaper_caledarbundle.tooltip.close{% endtrans %}</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}specshaper_caledarbundle.heading.event{% endtrans %}</h4>
      </div>

      <div class="modal-body">
        <div class="container-fluid">
          {{ form_start (form) }}
          <div class="col-md-2">
            <div class="form-group-sm well well-sm">
              {{ form_row(form.isAllDay)}}
              {{ form_row(form.startDate) }}
              {{ form_row(form.startTime) }}
              {{ form_row(form.endDate) }}
              {{ form_row(form.endTime) }}
            </div>
            <div class="form-group-sm well well-sm">
              {{ form_row(form.isReoccuring) }}
              {{ form_row(form.period) }}
              {{ form_row(form.repeatUntil) }}
            </div>
          </div>
          <div class="col-md-7">   
            {{ form_errors (form) }}
            {{ form_widget(form.bgColor)}}
            {{ form_row(form.title)}}
            {{ form_row(form.text)}}
          </div>

          <div class="col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Panel title</h3>
              </div>
              <div class="panel-table">
                <ul class="tags" data-prototype="{{ form_widget(form.invitees.vars.prototype)|e }}">
                  {%- for invitee in form.invitees %}
                  <li>{{ form_row(invitee)}}</li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>

            <input id="eventSubmitButton" type="submit" class="hidden" />      
            {{ form_end(form)}}

            {#            {%- for invitee in entity.invitees %}
                        <li>{{ invitee.emailAddress}}</li>
                          {% endfor %}#}

          </div>
        </div>
        <div class="modal-footer">
          <button id="submitButton" class="btn btn-primary pull-right">{{ "specshaper_caledarbundle.button.submit" | trans }}</button>
        </div>

      </div>
    </div>
  </div>